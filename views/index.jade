extends ./layout/basic_layout

block content
    script(type="text/javascript")
        google_ad_client = "ca-pub-1992382271196226";
        /* ramonblog */
        google_ad_slot = "2348069849";
        google_ad_width = 120;
        google_ad_height = 600;

    script(type="text/javascript", src="http://pagead2.googlesyndication.com/pagead/show_ads.js")

    #articles
        div.new
            if !readonly
                a(href="/blog/upsert")!= "New"
        - each article in articles
          div.article
            div.created_at= article.created_at
            div.title
                div.blogView
                    a(href="/blog/"+article._id.toHexString())!= article.title

            if !readonly
                div.blogDeleteUpdate
                    a(href="/blog/delete/"+article._id.toHexString())!= "delete"
                    a(href="/blog/upsert/"+article._id.toHexString())!= "edit"
            div.body!= article.body
